<%
var title = '';
if (page.category) title = page.category;
if (page.tag) title = page.tag;
if (page.archive){
  if (page.year) {
    title = page.year + (page.month ? '/' + page.month : '');
  } else {
    title = __('archive_a');

    if (theme.archive_yearly) {
      var page_grouped = {}, years = [];
      page.each(function (item) {
        var year = item.date.format('YYYY');
        if (!page_grouped[year]) {
          page_grouped[year] = [];
          years.push(year);
        }
        page_grouped[year].push(item);
      });
      years.sort(function (year) { return -year; });
    }
  }
}
%>
<% var prefixTitle = '你当前所在的位置：'; %>
<h2 class="archive-title<% if (page.tag){ %> tag<% } else if (page.category){ %> category<% } %>"><%= prefixTitle + title %></h2>

<% if (pagination == 2){ %>
  <% page.posts.each(function(item){ %>
    <%- partial('simple_article', {item: item, index: true, showEntry: false}) %>
  <% }); %>

  <%- partial('pagination') %>
<% } else { %>
  <div class="archive">
    <% if (page.year || !theme.archive_yearly) { %>
      <% page.each(function(item){ %>
        <%- partial('archive_title', {item: item}) %>
      <% }); %>
    <% } else { %>
      <% for (var i = 0, len = years.length; i < len; i++) { %>
        <div class="archive-year">
          <a href="./<%= years[i] %>/"><%= years[i] %></a>
          <div class="sep"></div>
        </div>
        <% page_grouped[years[i]].forEach(function(item){ %>
          <%- partial('archive_title', {item: item}) %>
        <% }); %>
      <% } %>
    <% } %>
  </div>
<% } %>