<% if (item.link){ %>
    <% if (item.title){ %>
        <h1 class="article-title"><a href="<%- item.link %>" target="_blank"><%= item.title %></a></h1>
    <% } else { %>
        <h1 class="article-title"><a href="<%- item.link %>" target="_blank"><%= item.link %></a></h1>
    <% } %>
<% } else { %>
    <% if (index){ %>
        <h1 class="article-title"><a href="<%- config.root %><%- item.path %>"><%= item.title %></a></h1>
    <% } else { %>
        <h1 class="article-title"><%= item.title %></h1>
    <% } %>
<% } %>