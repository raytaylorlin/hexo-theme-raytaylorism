.container
    width 700px
    @media (max-width: 767px)
        width 90%
.container.main-container
    @media (max-width: 767px)
        width 100%

// 重置materialize中的各种列表样式
ul, ol
    padding-left 20px
    &.tabs
        padding-left 0

ul, ul li
    list-style-type disc

nav, .fixed-action-btn
    ul
        padding-left 0
    li
        list-style-type none

ul.pagination, ul.collapsible, ul.indicators
    padding-left 0
    li
        list-style-type none

img
    width 100%
    padding 4px
    background-color #F5F5F5
    border 1px solid #ddd
    border-radius 4px

strong
    font-weight bold

blockquote p
    margin 0 !important

nav ul
    a:hover
        background-color rgba(0, 0, 0, 0)

.card
    margin-top 0

    &.medium
        height 440px

    .card-content
        padding 25px 25px 30px

    .card-action
        padding-left 25px
        padding-right 25px

    // .card-content p
    //     margin 0.5em 0

.chip
    height initial
    line-height 18px
    padding 4px 14px
    color white

.breadcrumb
    font-size 1.2em

.material-placeholder
    text-align center
    width 75%
    margin 0 auto

.materialboxed
    display initial
    width 100%

// 幻灯片的导航按钮位置
.slider .indicators
    bottom 60px
    z-index 10

.main-container
    margin-top 30px

.mt-0
    margin-top 0

.collection a.collection-item:not(.active):hover
    background-color #f5f5f5

// 将默认的图标字体换为FontAwesome
.breadcrumb:before
    content "\f105"
    font-family: FontAwesome

// FontAwesome
.fa
    margin-right 5px
